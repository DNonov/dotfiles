#!/bin/zsh

export ZSH=$HOME/.oh-my-zsh
export PATH=$HOME/bin:$HOME/.local/bin:$HOME/.composer/vendor/bin:$PATH;
export EDITOR="vim"
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# FZF config
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Ag config
if type ag &> /dev/null; then
  export FZF_DEFAULT_COMMAND='ag -p ~/.gitignore --hidden -g ""'
fi

ZSH_THEME="dnonov"

plugins=(
  vi-mode
  gulp
  httpie
  ubuntu
  virtualenv
)
source $ZSH/oh-my-zsh.sh

# Predicates vim, tmux and fzf color scheme
export theme_color="light"

# Prevents inactive vim on Ctrl-s
stty -ixon
