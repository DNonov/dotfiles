{
  "files.autoSave": "afterDelay",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
	"workbench.startupEditor": "newUntitledFile",
	"window.zoomLevel": -1,
  "editor.parameterHints.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.lineHeight": 20,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],

  // Python specific
  "python.pythonPath": "/usr/bin/python3",
  "python.linting.enabledWithoutWorkspace": false,
  "python.linting.pylintArgs":
  ["--load-plugins=pylint_django"],
	"[python]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"editor.detectIndentation": false,
  },
  // CSharp specific
	"[csharp]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"editor.detectIndentation": false,
  },

  "editor.fontWeight": "normal",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.fontFamily": "Liberation Mono",
  "editor.fontSize": 16,
  "terminal.integrated.fontFamily": "Liberation Mono",
  "terminal.integrated.fontSize": 16,
	"terminal.integrated.fontWeightBold": "normal",
  "editor.renderIndentGuides": false,
  "search.location": "panel",
  "zenMode.restore": true,
  "markdown.preview.breaks": true,
  "workbench.list.keyboardNavigation": "simple",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.iconTheme": "webstorm-icons",
  "workbench.colorTheme": "Light Delight",

  // Add emmet support to all .ejs files
  "emmet.includeLanguages": {
  "ejs": "html"
  },

  // This allows me to use emmet at every .js file
	"files.associations": {
    "*.js": "javascriptreact",
    "Dockerfile.*": "dockerfile"
	},

	// Some gitLens settings
	"editor.renderWhitespace": "none",
	"gitlens.advanced.messages": {
		"suppressShowKeyBindingsNotice": true
	},
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.hovers.currentLine.over": "line",
	"cSpell.language": "en",
  "cSpell.userWords": [
    "ecommerce",
    "endblock",
    "gmail",
    "zmdi"
  ],

	"vim.useCtrlKeys": false,
}