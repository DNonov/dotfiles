{
  "files.autoSave": "afterDelay",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 1,
  "editor.parameterHints.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.lineHeight": 20,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],

  // Python specific
  "python.pythonPath": "/usr/bin/python3",
  "python.linting.enabledWithoutWorkspace": false,
  "python.linting.pylintArgs":
  ["--load-plugins=pylint_django"],
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
  },
  // CSharp specific
  "[csharp]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
  },

  "editor.fontWeight": "normal",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.fontFamily": "Liberation Mono",
  "editor.fontSize": 16,
  "terminal.integrated.fontFamily": "Liberation Mono",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeightBold": "normal",
  "editor.renderIndentGuides": false,
  "search.location": "panel",
  "zenMode.restore": true,
  "markdown.preview.breaks": true,
  "workbench.list.keyboardNavigation": "simple",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.iconTheme": "webstorm-icons",
  "workbench.colorTheme": "Jellybeans Theme",

  // Add emmet support to all .ejs files
  "emmet.includeLanguages": {
  "ejs": "html"
  },

  // This allows me to use emmet at every .js file
  "files.associations": {
    "*.js": "javascriptreact",
    "Dockerfile.*": "dockerfile"
  },

  // Some gitLens settings
  "editor.renderWhitespace": "none",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",

  "cSpell.language": "en",
  "cSpell.userWords": [
    "ecommerce",
    "endblock",
    "gmail",
    "zmdi"
  ],
  "cSpell.enabledLanguageIds": [
    "git-commit",
    "git-rebase",
    "jsonc",
    "csharp",
    "go",
    "javascript",
    "javascriptreact",
    "markdown",
    "php",
    "plaintext",
    "text",
    "typescript",
    "typescriptreact",
    "yml",
    "html",
    "css",
    "bat",
    "bibtex",
    "clojure",
    "coffeescript",
    "c",
    "cpp",
    "csharp",
    "css",
    "diff",
    "dockerfile",
    "fsharp",
    "go",
    "groovy",
    "handlebars",
    "html",
    "ini",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jinja",
    "jsonc",
    "latex",
    "less",
    "lua",
    "makefile",
    "markdown",
    "objective-c",
    "objective-cpp",
    "perl",
    "php",
    "powershell",
    "jade",
    "python",
    "r",
    "razor",
    "ruby",
    "rust",
    "scss",
    "sass",
    "shaderlab",
    "shellscript",
    "sql",
    "swift",
    "typescript",
    "typescriptreact",
    "tex",
    "vb",
    "xml",
    "xsl",
    "yaml"
  ],
  // Original ignorePaths array contains .git which prevents spellcheck on commit_msg
  "cSpell.ignorePaths": [
    "node_modules",
    "*.dll",
    "**/*.dll"
  ],

  "vim.useCtrlKeys": false,

  // This is workaround of the undo bug
  // VSCodeVim's history stack differs from the VS Code's one.
  // So "undo" and "redo" actions will be mapped to VS Code's history stack.
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    }
  ]
}