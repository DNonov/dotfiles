[core]
  editor       = nvim
  excludesFile = ~/.gitignore
[user]
  email = d.nonov@gmail.com
  name  = Dimitar Nonov
[pager]
  # Use npm install -g diff-so-fancy
  diff = diff-so-fancy | less --tabs=2 -RFS --pattern '^(Date|added|deleted|modified): '
  show = diff-so-fancy | less --tabs=2 -RFS --pattern '^(Date|added|deleted|modified): '
[color]
	ui = auto
[color "diff"]
	commit     = "green"
	frag       = "blue"
	meta       = "blue"
	new        = "green"
	old        = "red"
	whitespace = "red reverse"
  newMoved   = "cyan"
  oldMoved   = "blue"
[color "diff-highlight"]
  # Diff dark
	; newHighlight = "green 237"
	; newNormal    = "green"
	; oldHighlight = "red 237"
	; oldNormal    = "red"
  # Diff light
	newHighlight = "green 254"
	newNormal    = "green"
	oldHighlight = "red 254"
	oldNormal    = "red"
[color "branch"]
	current = "yellow reverse"
	local   = "yellow"
	remote  = "green"
[alias]
  a      = add
  aa     = add -A
  ap     = add -p
  bl     = blame
  bll    = blame -L
  br     = branch
  ca     = commit --amend
  ch     = checkout
  chb    = checkout -b
  co     = commit
  d      = diff
  dc     = diff --cached
  l      = "!bash ~/bin/gitlog"
  lr     = "!bash ~/bin/gitlog -r"
  me     = merge
  mea    = merge --abort
  phm    = push heroku  master
  pom    = push origin master
  rh     = reset HEAD --
  rp     = reset -p
  s      = status
  st     = stage
  uco    = reset --soft HEAD^
  unpush = push origin +HEAD^:master
